# Build stage
FROM node:20-slim AS builder

WORKDIR /app

COPY package.json ./
RUN npm install

COPY . .

# Build mobile version
RUN npm run build:mobile

# Rename index.mobile.html to index.html
RUN mv /app/dist-mobile/index.mobile.html /app/dist-mobile/index.html

# Production stage
FROM nginx:stable

COPY --from=builder /app/dist-mobile /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
